<section>
	<div class="container-fluid my-5">
		<div class="mb-4">
			<h3>Trending Videos</h3>
			<hr>
		</div>
		<div class="row" id="adminvideoContainer">
		</div>
	</div>
</section>


<script>
		function getAdminVideo(){
			$.ajax({
			url: BaseUrl + 'Api/admin/GetTop3AdminVideoList',
			method: 'GET',
			success: function (response) {
				if (response.status === 200) {
					if(response.data.length>0){
						response.data.forEach(function(d){
	$("#adminvideoContainer").append(`
	<div class="col-lg-4 col-md-4 col-sm-4 col-12 mb-3">
					<div>
						<div class="mb-3">
							<iframe class="rounded" width="100%" height="215" src="${d.videoUrl}"></iframe>

						</div>
						<div>
							<h5><a target="_blank" class="text-secondary" href="${d.videoUrl}" style="text-decoration:none;">${d.title.slice(0,70)}.. </a></h5>
							<p>${d.description.slice(0,150)}..</p>
						</div>
					</div>
				</div>
						`)
						})

					}
				}
			}
			})
		}
		getAdminVideo();
</script>