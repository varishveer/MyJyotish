                        <select name="min_girl" id="min_girl" class="form-control" required>
                            <option value="1">1</option>
                            <option value="2">2</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="sec_girl">Second</label>
                        <select name="sec_girl" id="sec_girl" class="form-control" required>
