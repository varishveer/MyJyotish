                    <label for="place_girl">Birth Place</label>
                    <input list="PlaceOfBirthList_girl" type="text" name="place_girl" id="place_girl" class="form-control  " placeholder="Enter birth place" required>

                  
                    <div class="position-absolute bg-light d-none" id="PlaceOfBirthList_girl">
                    </div>
