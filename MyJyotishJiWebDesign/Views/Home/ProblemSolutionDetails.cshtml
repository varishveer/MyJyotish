<!-- External CSS for styling -->
<style>

    .card {
        background: rgba(255, 255, 255, 0.8);
        border: none;
    }

    .profile-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
    }

    .section-title {
        font-weight: bold;
        font-size: 1.2rem;
        margin-top: 1rem;

    }
        .problem-solution img {
            max-width: 100%; /* Ensure images are responsive */
            height: auto; /* Maintain aspect ratio */
        }

