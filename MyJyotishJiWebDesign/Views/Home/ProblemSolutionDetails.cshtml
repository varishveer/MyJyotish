<!-- External CSS for styling -->
<style>
    
    body {
        background: url("https://api.myjyotishg.in/astrologer-bg.jpg");
        background-size: cover;
        background-attachment: fixed;
        backdrop-filter: blur(3px);
    }

    .card {
        background: rgba(255, 255, 255, 0.8);
        border: none;
    }

    .profile-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
    }

    .section-title {
        font-weight: bold;
        font-size: 1.2rem;
        color: #343a40;
        margin-top: 1rem;
        text-decoration: underline;
        text-align:center;

    }

   

        .problem-solution img {
            max-width: 100%; /* Ensure images are responsive */
            height: auto; /* Maintain aspect ratio */
        }

    .placeholder-text {
        color: #999;
        font-style: italic;
    }
</style>

<!-- Main container for profile data -->
<div class="container my-3">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-12">
            <div id="profileData" class="card p-4 shadow-sm">
                <div class="text-center">
                    <!-- Profile Image Placeholder -->
                  
                    <span class="fw-bold" id="profileName"></span> 
                  
                    <p  class="mt-2"><strong>Appointment ID:</strong> <span id="appointmentId"></span></p>
                    <p><strong>Date:</strong> <span id="profileDate"></span> | <strong>Time:</strong> <span id="profileTime"></span></p>
                </div>

                <!-- Problems & Solutions -->
                <h4 class="section-title">Problems and Solutions</h4>
                <div id="problemSolutionList"></div>
            </div>
        </div>
    </div>
</div>

<!-- Script for data fetching and display -->
<script>
    $(document).ready(function () {
        function getIdFromUrl() {
            
            const urlObj = new URL(window.location.href);

            const params = new URLSearchParams(urlObj.search);

            const id = params.get('Id');

            return id;
        }
        var Id = getIdFromUrl();
        const apiUrl = `${BaseUrl}api/User/getProblemSolution?Id=${Id}`;

        // Function to format date to DD-MM-YYYY
        function formatDate(isoDate) {
            let date = new Date(isoDate);
            return date.toLocaleDateString('en-GB'); // Formats as DD/MM/YYYY
        }

        // AJAX call to fetch data
        $.ajax({
            url: apiUrl,
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${localStorage.getItem("Token")}`,
                'Content-Type': 'application/json',
            },
            success: function (response) {
                if (response.status === 200) {
                    const data = response.data;

                    // Populate profile data
                    $('#profileName').text(data.jyotishName);
                    $('#appointmentId').text(data.appointmentId);
                    $('#profileDate').text(formatDate(data.date));
                    $('#profileTime').text(data.time.substring(0, 5)); // Show time as HH:MM

                    // Check if problems and solutions are arrays
                    const problems = data.problem || []; // Assuming this is an array of problems
                    const solutions = data.solution || []; // Assuming this is an array of solutions

                    $('#problemSolutionList').append(`<h4 class='section-title text-center my-4'>Problems</h4>`);
                    // Generate problem sections
                    problems.forEach((problem, index) => {
                       
                        const problemText = problem || '<span class="placeholder-text">No Solution provided</span>';
                        $('#problemSolutionList').append(`
                                <p class='text-start'><strong>Problem ${index + 1}:</strong> ${problemText}</p>
                    `);
                    });

                    // After all problems are displayed, generate the solution sections
                    $('#problemSolutionList').append(`<h4 class='section-title text-center my-4'>Solutions</h4>`); // Add a header for solutions
                    solutions.forEach((solution, index) => {
                        const solutionText = solution || '<span class="placeholder-text">No Solution provided</span>';
                        $('#problemSolutionList').append(`
                        <p class='text-start'><strong>Solution ${index + 1}:</strong> ${solutionText}</p>
                    `);
                    });

                } else {
                    $('#profileData').html('<p class="text-center text-danger">Error loading data. Please try again later.</p>');
                }
            },
            error: function () {
                $('#profileData').html('<p class="text-center text-danger">Error loading data. Please try again later.</p>');
            }
        });
    });
</script>
