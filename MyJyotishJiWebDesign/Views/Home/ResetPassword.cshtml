</head>
<body>
    <h1>1-on-1 Voice Call</h1>
    <button onclick="startCall()">Start Call</button>
    <button onclick="acceptCall()">Accept Call</button>
    <button onclick="endCall()">End Call</button>
    <audio id="localAudio" autoplay muted></audio>
    <audio id="remoteAudio" autoplay></audio>
    <div id="root"></div>
    <script>
        // Initialize ZEGOCLOUD SDK
        const roomID = 'user_1';
        const userID = Math.floor(Math.random() * 10000) + "";
        const userName = "userName" + userID;
        const appID = 865742206;
        const serverSecret = "5a72180880214f43c9358d38af32eacc";
        const TOKEN = ZegoUIKitPrebuilt.generateKitTokenForTest(appID, serverSecret, roomID, userID, userName);
       
        const zg = ZegoUIKitPrebuilt.create(TOKEN);
        debugger
        async function startCall() {
            try {

                zg.joinRoom({
                    container: document.querySelector("#root"),
                    turnOnCameraWhenJoining: false,
                    showMyCameraToggleButton: false,
                    showAudioVideoSettingsButton: false,
                    showScreenSharingButton: false,
                    showPreJoinView: false,
                           lowerLeftNotification: {
                        showUserJoinAndLeave: false,
                        showTextChat: false,
                    },
                    showRoomTimer:true,
                    showLeavingView:false,
                    showTextChat:false,
                    maxUsers: 2,
                    showPreJoinView: false,
                    scenario: {
                        mode: ZegoUIKitPrebuilt.OneONoneCall,
                       

                    }, onJoinRoom: () => {
                        turnOnMicrophoneWhenJoining:true;
                    },
                    onLeaveRoom: () => {
                        turnOnMicrophoneWhenJoining: false;

                    },
                    onUserJoin: (user) => {
                        },
                        onUserLeave: (user) => {
                        }

                });
                zg.setCallInvitationConfig({
                    onSetRoomConfigBeforeJoining: () => {
                        const roomID = zg.getRoomID();
                        sessionStorage.setItem('roomID', roomID);
                       
                    }
                });
            } catch (error) {
                console.error('Error starting the call:', error);
            }
        }

    </script>
</body>
