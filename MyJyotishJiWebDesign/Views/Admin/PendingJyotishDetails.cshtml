@{
    Layout = "AdminLayout";

}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

 <style>
        /* Base styles */
    body {
        margin: 0;
        font-family: "Heebo", sans-serif;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #757575;
        background-color: #F3F6F9;
        -webkit-text-size-adjust: 100%;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    }
        .container {
            max-width: 700px;
            margin: 0 auto;
            padding: 40px;
        }
        .profile-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
            transition: transform 0.3s ease;
        }
        .profile-card:hover {
            transform: translateY(-10px);
        }
        .profile-image {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #007BFF;
            margin-bottom: 20px;
        }
        .info {
            margin-top: 20px;
        }
        .info h2 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
        }
        .info p {
            font-size: 1rem;
            color: #666;
            margin-bottom: 5px;
        }
        .text-muted {
            font-size: 0.9rem;
            color: #888;
        }
        .row {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: center;
            margin-bottom: 15px;
        }
        .col {
            flex: 1;
            min-width: 200px;
            text-align: left;
        }
        .col p {
            display: flex;
            align-items: center;
            font-size: 1rem;
            color: #333;
        }
        .col i {
            margin-right: 8px;
            color: #007BFF;
        }
        .info a {
            color: #007BFF;
            text-decoration: none;
            font-weight: 500;
        }
        .info a:hover {
            text-decoration: underline;
        }

        /* Responsive styles */
        @@media (max-width: 768px) {
            .container {
                padding: 20px;
            }
            .profile-card {
                padding: 20px;
            }
            .profile-image {
                width: 100px;
                height: 100px;
            }
            .info h2 {
                font-size: 1.6rem;
            }
            .info p {
                font-size: 0.9rem;
            }
            .row {
                flex-direction: column;
                align-items: center;
            }
            .col {
                text-align: center;
                min-width: 100%;
            }
        }

        @@media (max-width: 480px) {
            .container {
                padding: 15px;
            }
            .profile-image {
                width: 80px;
                height: 80px;
            }
            .info h2 {
                font-size: 1.4rem;
            }
            .info p {
                font-size: 0.85rem;
            }
            .row {
                flex-direction: column;
                align-items: center;
            }
            .col {
                min-width: 100%;
                text-align: center;
            }
        }
    </style>


<div class="container mt-2">
    <div class="profile-card">
        <img src="~/Img/Astrologer.jpg" alt="User Profile Picture" class="profile-image">

        <div class="info">
            <h2>John Doe</h2>
            <p class="text-muted">Web Developer</p>
            
            <div class="row">
                <div class="col">
                    <p><i class="fas fa-genderless"></i><strong>Gender:</strong> Male</p>
                </div>
                <div class="col">
                    <p><i class="fas fa-birthday-cake"></i><strong>Age:</strong> 29</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p><i class="fas fa-map-marker-alt"></i><strong>Location:</strong> New York, USA</p>
                </div>
                <div class="col">
                    <p><i class="fas fa-city"></i><strong>City:</strong> New York</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p><i class="fas fa-envelope"></i><strong>Email:</strong> <a href="mailto:john.doe@example.com">john.doe@example.com</a></p>
                </div>
                <div class="col">
                    <p><i class="fas fa-phone-alt"></i><strong>Phone:</strong> +1 234 567 890</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p><i class="fas fa-link"></i><strong>Website:</strong> <a href="http://www.johndoe.dev" target="_blank">www.johndoe.dev</a></p>
                </div>
                <div class="col">
                    <p><i class="fas fa-flag"></i><strong>Nationality:</strong> American</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p><i class="fas fa-language"></i><strong>Language:</strong> English, Spanish</p>
                </div>
                <div class="col">
                    <p><i class="fas fa-briefcase"></i><strong>Occupation:</strong> Front-end Developer</p>
                </div>
            </div>
        </div>
    </div>
</div>
