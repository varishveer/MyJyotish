@{
    Layout = "AdminLayout";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Include DataTables JS -->
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>


<style>
    td th{
        white-space: nowrap; /* Prevent text from wrapping */
    }

    thead, th {
        background-color: rgba(63, 175, 165, 0.85);
        color: white;
        font-weight: 300 !important;
        text-align: center !important;
    }
</style>
<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Calling Records</h6>

        </div>
        <table id="DataTable" class="display">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>DateTime</th>
                    <th>Type</th>
                    <th>Total Time</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Status</th>
                    <th>UserId</th>
                    <th>JyotishId</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data will be populated here by JavaScript -->
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        function fetchData() {
            $.ajax({
                url: "https://api.myjyotishg.in/api/Admin/CallingRecord",
                type: 'GET',
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem("Token")}`, // Example of an authorization header
                    'Content-Type': 'application/json'
                },
                success: function (result) {
                    // Destroy the existing DataTable instance if it exists
                    if ($.fn.DataTable.isDataTable('#DataTable')) {
                        $('#DataTable').DataTable().clear().destroy();
                    }

                    // Create a DataTable and populate it with data
                    $('#DataTable').DataTable({
                        data: result.data,
                        columns: [
                            { data: 'id', title: 'Id' },
                            { data: 'dateTime', title: 'DateTime' },
                            { data: 'type', title: 'Type' },
                            { data: 'totalTime', title: 'Total Time' },
                            { data: 'startTime', title: 'Start Time' },
                            { data: 'endTime', title: 'End Time' },
                            { data: 'status', title: 'Status' },
                            { data: 'userId', title: 'UserId' },
                            { data: 'jyotishId', title: 'JyotishId' }
                        ],
                        // Additional options can be configured here
                    });
                },
                error: function (errormessage) {
                    console.error('Error fetching data:', errormessage.responseText);
                }
            });
        }

        // Load all records by default
        fetchData();
    });
</script>