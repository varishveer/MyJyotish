
@{
    Layout = "AdminLayout";
}


<!-- Include jQuery -->

<!-- Include DataTables JS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<link href="https://cdn.datatables.net/2.1.3/css/dataTables.dataTables.min.css" rel="stylesheet" />
<style>
    .card-body {
        padding-left: 15px !important;
        padding-right: 15px !important;
    }

    label {
        /* display: inline-block; */
        display: none;
    }
</style>



<div class="container-fluid mt-4">
    <div class="card">

        <div class="d-flex flex-row justify-content-between align-items-center pt-2 px-4">
            <h5 class="text-primary">Calling Records</h5>
            <a href="/Admin/AddPoojaCategory">
            </a>

        </div>
        <hr />

        <div class="card-body">
            <div class="table-responsive">
                <table id="DataTable" class="table table-bordered table-striped">
                     <thead>
                        <tr>
                            <th>Id</th>
                            <th>DateTime</th>
                            <th>Type</th>
                            <th>Total Time</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Status</th>
                            <th>UserId</th>
                            <th>JyotishId</th>
                        </tr>
                     </thead>
                    <tbody>
                        <!-- Data will be populated here by JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.datatables.net/2.1.3/js/dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        function fetchData() {
            $.ajax({
                url: BaseUrl + "api/Admin/CallingRecord",
                type: 'GET',
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem("Token")}`, // Example of an authorization header
                    'Content-Type': 'application/json'
                },
                success: function (result) {
                    // Destroy the existing DataTable instance if it exists
                    if ($.fn.DataTable.isDataTable('#DataTable')) {
                        $('#DataTable').DataTable().clear().destroy();
                    }

                    // Create a DataTable and populate it with data
                    $('#DataTable').DataTable({
                        data: result.data,
                        columns: [
                            { data: 'id', title: 'Id' },
                            { data: 'dateTime', title: 'DateTime' },
                            { data: 'type', title: 'Type' },
                            { data: 'totalTime', title: 'Total Time' },
                            { data: 'startTime', title: 'Start Time' },
                            { data: 'endTime', title: 'End Time' },
                            { data: 'status', title: 'Status' },
                            { data: 'userId', title: 'UserId' },
                            { data: 'jyotishId', title: 'JyotishId' }
                        ],
                        // Additional options can be configured here
                    });
                },
                error: function (errormessage) {
                    console.error('Error fetching data:', errormessage.responseText);
                }
            });
        }

        // Load all records by default
        fetchData();
    });
</script>