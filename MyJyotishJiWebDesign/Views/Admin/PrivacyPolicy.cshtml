  <script>
    $(".contactForm").submit(function(e){
        e.preventDefault()
        Swal.fire({
                title: "Processing Your Request",
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            })
        let formData={type:"contact"};
        let arrData=$(this).serializeArray();
        arrData.forEach(function(d){
            formData[d.name]=d.value;
        })

        $.ajax({
            url:BaseUrl+"api/admin/AddPrivacyPolicy",
            type:"post",
             headers: {
                'Authorization': `Bearer ${localStorage.getItem("Token")}`
            },
            contentType:'application/json',
            data:JSON.stringify(formData),
            success:function(res){
                if(res.status==200){
    Swal.fire({
                      title:"success",
                      text:res.message,
                      icon:"success",
                      didClose:()=>{
                          location.reload();
                      }
                  })
                }else{
                      Swal.fire({
                    title:"error",
                    text:res.message,
                    icon:"error"
                   
                })
                }
              
            },error:function(xhr){
               Swal.fire({
                    title:"error",
                    text:xhr.responseText || xhr.statusText,
                    icon:"error"
               })
            }
        })

    }) 
