@{
    Layout = "AdminLayout";
}

<form class="border rounded w-50 mx-auto p-3 d-flex gap-2" id="levelsForm">
    <input type="text" class="form-control" id="levels" name="levels" placeholder="Enter Levels Name">
    <input type="submit" value="Add" class="btn btn-primary">
</form>

<div class="container w-75 mt-5 border rounded p-3">
    <div class="row">
        <div class="col-sm-12">
            <form id="departmentPageForm">
                <div class="row gap-5 justify-content-center">
                    <div class="col-sm-5">
                        Levels
                        <select required class="form-select mb-2" name="levels" id="levelsDrop">
                            <option value="">--select levels--</option>

                        </select>
                    </div>
                    <div class="col-sm-5">
                        Departments
                        <select required class="form-select mb-2" name="department" id="departmentDrop">
                            <option value="">--select department--</option>

                        </select>
                    </div>
                   
                    <div class="col-sm-12" id="Pages">
                    </div>
                </div>
                <div class="text-center"><input type="submit" class="btn btn-primary" value="Add" /></div>
            </form>
        </div>
    </div>
</div>

<script>
    $("#levelsForm").submit(function (e) {
        e.preventDefault();
        let formData=new FormData();
        formData.append("levelsName", $("#levels").val())
        $.ajax({
            url: BaseUrl + "api/admin/Addlevels",
            type:"post",
            headers: {
                'Authorization': `Bearer ${localStorage.getItem("Token")}`
            },
            processData:false,
            contentType:false,
            data:formData,
            success:function(res){
               if(res.status==200){
                   Swal.fire({
                       title:"success",
                       text:res.message,
                       icon:"success",
                       didClose:()=>{
                           location.reload()
                       }
                   })
               }else{
                    Swal.fire({
                        title: "error",
                        text: res.message,
                        icon: "error"

                    })
               }
            },
            error:function(){
                Swal.fire({
                    title: "error",
                    text: "some error occured",
                    icon: "error"

                })
            }

        })
    })
    function getLevels() {
        $.ajax({
            url: BaseUrl + "api/admin/levelsList",
            type: "get",
            headers: {
                'Authorization': `Bearer ${localStorage.getItem("Token")}`
            },
            success: function (res) {
                console.log(res, "lev")
                if (res.status == 200) {
                    res.data.forEach(function (d) {
                        $("#levelsDrop").append(
                            `
                                  <option value='${d.id}'>${d.levelsName}</option>

                                    `
                        )
                    })
                }
            }
        })
    }
    getLevels();

    function getDepartment() {
        $.ajax({
            url: BaseUrl + "api/admin/DepartmentList",
            type: "get",
            headers: {
                'Authorization': `Bearer ${localStorage.getItem("Token")}`
            },
            success: function (res) {
                console.log(res, "dep")
                if (res.status == 200) {
                    res.data.forEach(function (d) {
                        $("#departmentDrop").append(
                            `
                                        <option value='${d.id}'>${d.departmentName}</option>

                                `
                        )
                    })

                }
            }
        })
    }
    getDepartment();
</script>
