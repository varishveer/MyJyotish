    <script>
        document.addEventListener("DOMContentLoaded", function() {
            debugger;
            const email =  localStorage.getItem("userEmail");
            const imageElement = document.getElementById('#ProfileImage');

            fetch(`https://localhost:7118/api/PendingJyotish/ProfileImage?Email=${encodeURIComponent(email)}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error("Network response was not ok");
                    }
                    return response.json();
                })
                .then(data => {
                    debugger;
                    if (data.status === 200) {
                        imageElement.src = "https://localhost:7118"+data.data; // Set the image source to the fetched data
                    } 
                })
                .catch(error => {
                    console.error('There was a problem with the fetch operation:', error);
                    imageElement.src = "Images/Placeholder/ProfileImage.jpg"; // Placeholder on error
                });
        });
    </script>

