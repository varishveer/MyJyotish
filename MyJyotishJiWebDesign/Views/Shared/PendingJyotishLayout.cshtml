        document.getElementById("logout").addEventListener("click", function () {
            Swal.fire({
                title: "Are you sure you want to logout?",
                text: "You will be redirected to the login page.",
                icon: "warning", // Changed to "warning" for a logout confirmation
                showCancelButton: true, // Show cancel button
                confirmButtonColor: "#3085d6", // Customize confirm button color
                cancelButtonColor: "#d33", // Customize cancel button color
                confirmButtonText: "Yes, logout!", // Confirm button text
                cancelButtonText: "Cancel" // Cancel button text
            }).then((result) => {
                if (result.isConfirmed) {
                    localStorage.clear(); // Clear local storage
                    window.location.replace("/Jyotish/Login"); // Redirect to login page
                }
            });
        });



    </script>
  


    <script>
        $(document).ready(function () {
            // Sidebar Toggler
            // Retrieve token and userId from localStorage
            const token = localStorage.getItem('Token3');
            const userId = localStorage.getItem('Id');

            // Make the AJAX request
            $.ajax({
                url: BaseUrl + `Api/PendingJyotish/LayoutData?id=${userId}`, // Ensure the correct base URL and endpoint
                type: 'GET',
                headers: {
                    'Authorization': `Bearer ${token}`, // Pass the token as a Bearer token in headers
                    'Content-Type': 'application/json'  // Indicate that we're working with JSON
                },
                success: function (response) {
                   
                    if (response && response.data.name) {
                        $('#profileName').text(response.data.name);
                    } else {
                        console.warn('Response does not contain the expected name property.');
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                 
                    console.error("AJAX error:", textStatus, errorThrown);


                }
            });



           

            

          
           

            // Highlight the active link
            $("a").each(function (i, d) {
                if (d.href.toLowerCase() === window.location.href.toLowerCase()) {
                    d.classList.add("active");
                    let element = d.parentElement.previousElementSibling;
                    if (element) element.classList.add("active");
                }
            });
        });
    </script>

