<script>
    $(document).ready(function () {

        const token = localStorage.getItem('Token3');
        const userId = localStorage.getItem('Id');

        function getJyotishSlotDetails() {
            $.ajax({
                url: "@BaseUrl" + `Api/PendingJyotish/JyotishSlotDetails?id=${userId}`, // Adjust the URL as needed
                type: 'GET',
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                },
                dataType: 'json',
                success: function (response) {
                     
                    if (response.status === 200) {
                        console.log("Data retrieved successfully:", response.data);
                        const $detailsContainer = $('#BookingDetails');

                        const dateObject = new Date(response.data.date);
                        const formattedDate = dateObject.toLocaleDateString('en-CA');

                        const $detailsElement = $(`
                                <span class="font-weight-boldx">Interview Details</span>
                                    <span  class="ml-2"> Date: ${formattedDate}</span>
                                     <span  class="ml-2"> Time: ${response.data.time}</span>
                                `);
                        $detailsContainer.append($detailsElement);
                        $('.slotBookingDiv').hide();
                        $('#bookingbtn').hide();
                        
                    } else {
                        console.log("Error:", response.Message);
                        $('.BookingDetails').hide();
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.error("AJAX error:", textStatus, errorThrown);
                    // Handle AJAX error here
                }
            });
        }

        getJyotishSlotDetails();





        const apiUrl = "@BaseUrl" + `Api/PendingJyotish/SlotList`;
     

        let selectedDate = null;
        let selectedTime = null;
        
        // Make an AJAX GET request to retrieve the data
        $.ajax({
            url: apiUrl,
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${token}`,
                'Content-Type': 'application/json'
            },
            success: function (response) {
                 
                // Parse the API response
                const dateTimeMap = {};
                response.data.forEach(item => {
                     
                    const dateKey = new Date(item.date).toLocaleDateString('en-CA'); // Extract only the date part
                    if (!dateTimeMap[dateKey]) {
                        dateTimeMap[dateKey] = [];
                    }
                    item.times.forEach(timeSlot => {
                        dateTimeMap[dateKey].push({
                            time: timeSlot.time,
                            status: timeSlot.status
                        });
                    });
                });

                // Display dates on the webpage
                const $dateContainer = $('.dates');
                const $timeContainer = $('#time-slots');

                for (const date in dateTimeMap) {
                     
                    const dateObject = new Date(date);
                    const dayName = dateObject.toLocaleString('en-US', { weekday: 'short' }); // E.g., "Sun"
                    const dayNumber = dateObject.getDate(); // E.g., 6
                    const monthName = dateObject.toLocaleString('en-US', { month: 'short' }); // E.g., "Oct"

                    // Create date element
                    const $dateElement = $(`
                                <div class="date-item date" data-date='${date}'>
                                    <button class="btn btn-light date-btn" data-date="${date}">
                                        <div>${dayName}</div>
                                        <div class="day">${dayNumber}</div>
                                        <div>${monthName}</div>
                                    </button>
                                </div>
                            `);
                    $dateContainer.append($dateElement);
                }

                // Click event to show times when a date is clicked
                $('.date').on('click', function () {
                     
                    // Clear previous times
                    $timeContainer.empty();

                    // Retrieve the clicked date and update `selectedDate`
                    selectedDate = $(this).data('date');

                    // Create corresponding time buttons for the selected date
                    dateTimeMap[selectedDate].forEach(slot => {
                        const { time, status } = slot;
                        const slotStatusClass = status === 'Booked' ? 'btn-danger' : 'btn-success';

                        const $timeElement = $(`
                                    <div class="col-md">
                                        <button class="btn btn-outline-secondary rounded-3 text-success time-button"
                                                data-date='${selectedDate}'
                                                data-time='${time}'
                                                    ${status === 'Booked' ? 'disabled' : 'style="background-color: green; color: black !important;"'}>
                                            ${time}
                                        </button>
                                    </div>
                                `);
                        $timeContainer.append($timeElement);
                    });

                    // Attach event listener for each new time button
                    $('.time-button').on('click', function () {
                        selectedTime = $(this).data('time');

                        // Highlight selected time button
                        $('.time-button').removeClass('selected');
                        $(this).addClass('selected');
                    });
                });
            },
            error: function (error) {
                console.error('Error fetching slot data:', error);
            }
        });

        // Click event for the "Book Now" button
        $('#book-now').on('click', function () {

            // Check if selectedDate and selectedTime are properly set
            if (!selectedDate || !selectedTime) {
                alert("Please select both a date and a time slot before booking.");
                return;
            }

            // SweetAlert confirmation dialog before proceeding with booking
            Swal.fire({
                title: 'Confirm Booking',
                text: `Do you want to book the slot on ${selectedDate} at ${selectedTime}?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, book it!'
            }).then((result) => {
                if (result.isConfirmed) {

                    console.log('Selected Date:', selectedDate); // Debugging
                    console.log('Selected Time:', selectedTime); // Debugging

                    // Define the payload to send to the API
                    const postData = {
                        Date: selectedDate,
                        Time: selectedTime,
                        JyotishId: userId
                    };
                    console.log('Post Data:', postData); // Debugging

                    // Make an AJAX POST request to send the selected date and time
                    $.ajax({
                        url: "@BaseUrl" + 'Api/PendingJyotish/AddSlotBooking', // Check if BaseUrl is correctly set
                        method: 'POST',
                        headers: {
                            'Authorization': `Bearer ${token}`,
                            'Content-Type': 'application/json'
                        },
                        data: JSON.stringify(postData), // Convert JS object to JSON string
                        success: function (response) {

                            console.log('Response:', response); // Debugging
                            if (response.status === 200) {
                                Swal.fire({
                                    title: "Slot successfully booked",
                                    text: `Slot successfully booked for: ${selectedDate} at ${selectedTime}`,
                                    icon: "success"
                                });
                            } else if (response.status === 400) {
                                Swal.fire({
                                    title: `${response.message}`,
                                    icon: "error"
                                });
                            } else if (response.status === 409) {
                                Swal.fire({
                                    title: `${response.message}`,
                                    icon: "warning"
                                });
                            }
                        },
                        error: function (error) {

                            console.error('Error booking slot:', error); // Debugging
                        }
                    });

                }
            });
        });
    });
</script>

