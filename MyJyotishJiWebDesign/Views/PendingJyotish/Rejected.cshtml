@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Rejection</title>
    <!-- Bootstrap CSS (via CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJv+H3o0kS7Y92bQInZm5oOnb4z4Fb1trI4Aftg5h7jt1oVsFErFbIRGeqGl" crossorigin="anonymous">
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>


    <!-- Dashboard Rejection Message Container -->
    <div id="dashboardAlternateDiv" class="d-flex justify-content-center align-items-center mt-2">
        <div class="border border-danger bg-light p-3 rounded justify-content-center text-center" style="width: 80%; max-width: 600px;">
            <h4 class="text-danger">Your Profile Has Been Rejected</h4>
            <p class="text-danger" id="RejectedMessage"></p>
            <p class="text-danger">Please review your information and try again. If you need further assistance, feel free to contact support.</p>
        </div>
    </div>



    <!-- Bootstrap JS (via CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gybP6LtFfN9iFW5g7Yp5i6AgaGv6lAbV+9Ff6Z4Jk5iD1w6J4xV" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0j8VgXzEjwYgToQUBzYDejvmQpI7wZXoxxV4uX3pDPlPOKZT" crossorigin="anonymous"></script>

    <!-- Custom JavaScript -->
    <script>
        // Example rejected message (can be dynamically set based on response)
        var rejectedMessage = "Your address proof did not meet the requirements. Please upload a valid document.";

        // Update the message dynamically in the #RejectedMessage element
        document.getElementById('RejectedMessage').textContent = rejectedMessage;
    </script>

</body>
</html>
