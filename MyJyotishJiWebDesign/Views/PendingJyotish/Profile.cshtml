<script>
    // Function to fetch data from API using email from local storage
    function fetchData() {
        // Retrieve the email from local storage
        const Id = localStorage.getItem('Id');

        if (!Id) {
          
            return;
        }

        // Construct the API URL with the email as a query parameter
        const apiUrl = BaseUrl+`Api/PendingJyotish/ProfileData?Id=${encodeURIComponent(Id)}`;

        // Get the token from local storage
        const token = localStorage.getItem('Token3');

        // Make the GET request using jQuery
        $.ajax({
            url: apiUrl,
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${token}`,
                'Content-Type': 'application/json'
            },
            success: function (response) {
              
              
                const data = response.data;
                $('#name').text(data.jyotishRecord.name || 'N/A');
                $('.name').text(data.jyotishRecord.name || 'N/A');
                $('#gender').text(data.jyotishRecord.gender || 'N/A');
                $('#dateOfBirth').text(new Date(data.jyotishRecord.dateOfBirth).toLocaleDateString() || 'N/A');
                $('#email').text(data.jyotishRecord.email || 'N/A');
                $('#mobile').text("+"+data.jyotishRecord.mobile || 'N/A');
                $('#country').text(data.jyotishRecord.country || 'N/A');
                $('#state').text(data.jyotishRecord.state || 'N/A');
                $('#city').text(data.jyotishRecord.city || 'N/A');
                $('#language').text(data.jyotishRecord.language || 'N/A');
                $('#expertise').text(data.jyotishRecord.expertise || 'N/A');
                $('#alternateMobile').text("+"+data.jyotishRecord.alternateMobile || 'N/A');
                function formatDate(dateString) {
                    // Create a new Date object from the date string
                    const date = new Date(dateString);

                    // Extract day, month, and year
                    const day = String(date.getDate()).padStart(2, '0'); // Ensures two digits
                    const month = String(date.getMonth() + 1).padStart(2, '0'); // getMonth() returns 0-based month
                    const year = date.getFullYear();

                    // Return formatted date string in DD-MM-YYYY format
                    return `${day}-${month}-${year}`;
                }

                // Example usage when updating the DOM
                $('#dateOfBirth').text(formatDate(data.jyotishRecord.dateOfBirth) || 'N/A');
                $('#experience').text(data.jyotishRecord.experience || 'N/A');
                $('#pooja').text(data.jyotishRecord.pooja? "Yes": "No" || 'N/A');
                $('#appointmentCharges').text(data.jyotishRecord.appointmentCharges || 'N/A');
                $('#address').text(data.jyotishRecord.address || 'N/A');
                function formatTime(timeString) {
                    const [hours, minutes] = timeString.split(":"); // Split the string by the colon
                    return `${hours}:${minutes}`; // Return formatted time (HH:MM)
                }
                $('#availableTime').text((data.jyotishRecord.timeFrom && data.jyotishRecord.timeTo) ? formatTime(data.jyotishRecord.timeFrom) + " - " + formatTime(data.jyotishRecord.timeTo) : 'N/A');

                $('#awordsAndAchievement').text(data.jyotishRecord.awordsAndAchievement || 'N/A');
                $('#specialization').text(data.jyotishRecord.specialization || 'N/A');
                $('#pincode').text(data.jyotishRecord.pincode || 'N/A');
                $('#about').text(data.jyotishRecord.about || 'N/A');
                if (data.chat == true) {
                    $('#chat').text(data.jyotishRecord.chatCharges || 'N/A');
                }
                else 
                {
                    $('#chat').text("NO" || 'N/A');
                }
                if (data.call == true) {
                    $('#call').text(data.jyotishRecord.callCharges || 'N/A');
                }
                else 
                {
                    $('#call').text("NO" || 'N/A');
                }
               
               
                if (data.jyotishRecord.profileImageUrl) {
                    $('#profileImageUrl').attr('src', BaseUrl + data.jyotishRecord.profileImageUrl);
                } else {
                    $('#profileImageUrl').attr('src', "https://via.placeholder.com/300");
                }
               
            },
            error: function (jqXHR, textStatus, errorThrown) {
                // Handle any errors
                $('#result').text(`Error: ${errorThrown}`);
            }
        });
    }

    // Call the function to fetch data when the page loads
    $(document).ready(function () {
        fetchData();
    });
   
</script>
