<script>

    $(document).ready(function () {
        async function fetchDocuments() {
            const email = localStorage.getItem('userEmail');
            if (!email) {
                $('#statusMessage').text('No email address found in localStorage.');
                return;
            }

            try {

                const token = localStorage.getItem('Token3');
                const imageApiUrl = "@BaseUrl" + `Api/PendingJyotish/Documents?email=${encodeURIComponent(email)}`; // Replace with your API endpoint for images

                const response = await $.ajax({
                    url: imageApiUrl,
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });
                debugger;
             


                $('#idProof').attr('src', response.data.idProof ? "@BaseUrl" + response.data.idProof :  '/Img/SampleDoc.jpeg');
                document.getElementById("idProofStatus").textContent = response.data.idProofStatus ? response.data.idProofStatus : "Upload Document" ;

                $('#addressProof').attr('src', response.data.addressProof ? "@BaseUrl" + response.data.addressProof : '/Img/SampleDoc.jpeg');
                document.getElementById("addressProofStatus").textContent = response.data.addressProofStatus ? response.data.addressProofStatus : "Upload Document";

                $('#tenthCertificate').attr('src', response.data.tenthCertificate ? "@BaseUrl" + response.data.tenthCertificate :  '/Img/SampleDoc.jpeg');
                document.getElementById("tenthCertificateStatus").textContent = response.data.tenthCertificateStatus ? response.data.tenthCertificateStatus : "Upload Document";

                $('#twelveCertificate').attr('src', response.data.twelveCertificate ? "@BaseUrl" + response.data.twelveCertificate :  '/Img/SampleDoc.jpeg');
                document.getElementById("twelveCertificateStatus").textContent = response.data.twelveCertificateStatus ? response.data.twelveCertificateStatus : "Upload Document";

                $('#professionalCertificate').attr('src', response.data.professionalCertificate ? "@BaseUrl" + response.data.professionalCertificate :   '/Img/SampleDoc.jpeg');
                document.getElementById("professionalCertificateStatus").textContent = response.data.professionalCertificateStatus ? response.data.professionalCertificateStatus : "Upload Document";


                $('#loading').hide();

            } catch (error) {
                console.error('Error:', error);
                $('#statusMessage').text(`Error: ${error.message}`);
            }

        }

        fetchDocuments();
    });

</script>





