                        </div>
                        <div class="form-group col-md-4">
                            <label for="updateImage2">Image 2</label>
                            <input type="file" class="form-control" id="updateImage2" name="updateImage2">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="updateImage3">Image 3</label>
                            <input type="file" class="form-control" id="updateImage3" name="updateImage3">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="updateSubmitForm">Update</button>
            </div>
        </div>
    </div>
</div>

<style>

 
    .modal-fullscreen {
        /* Makes the modal take full height and width */
        max-width: 100%;
        width: 100%;
        height: 100%;
        margin: 0; /* No margin */
    }

    .modal-content {
        height: 100vh; /* Full viewport height */
        overflow-y: auto; /* Allows scrolling if content exceeds height */
        border: none; /* Optional: remove border */
        border-radius: 0; /* Optional: remove border-radius */
    }

    .modal-header,
    .modal-footer {
        position: sticky; /* Keep the header/footer sticky */
        top: 0; /* Fixes the header at the top */
        background: white; /* Background for header/footer */
        z-index: 10; /* Make sure it stays above the content */
    }
</style>



<script>
    $(document).ready(function () {
        // Get the Jyotish ID from localStorage

        var jyotishId = localStorage.getItem('Id');

        // Define the API URL
        var ApiUrl = BaseUrl + `Api/Jyotish/GetAllProblemSolution?Id=${jyotishId}`;

        // Load the problem-solution table
        $.ajax({
            url: ApiUrl,
            type: "GET",
            headers: {
                'Authorization': `Bearer ${localStorage.getItem("Token2")}`,
                'Content-Type': 'application/json',
            },
            success: function (response) {
                if (response.status === 200 && response.data.length > 0) {
                    $.each(response.data, function (index, item) {
                        if (item.image1 != null) { var src1 = BaseUrl + item.image1; }
                        if (item.image2 != null) { var src2 = BaseUrl + item.image2; }
                        if (item.image3 != null) { var src3 = BaseUrl + item.image3; }


                        var row = `<tr>
                                    <td>${item.id}</td>
                                    <td>${item.name}</td>
                                    <td>${item.email}</td>
                                        <td>${new Date(item.date).toLocaleDateString('en-IN')}</td>
                                    <td>${item.time}</td>
                                    <td>${item.problem1 || 'N/A'}</td>
                                    <td>${item.solution1 || 'N/A'}</td>
                                    <td>${item.problem2 || 'N/A'}</td>
                                    <td>${item.solution2 || 'N/A'}</td>
                                    <td>${item.problem3 || 'N/A'}</td>
                                    <td>${item.solution3 || 'N/A'}</td>
                                    <td>${item.image1 ? `<img src="${src1}" alt="Image 1" width="50" height="50">` : 'No Image'}</td>
                                    <td>${item.image2 ? `<img src="${src2}" alt="Image 2" width="50" height="50">` : 'No Image'}</td>
                                    <td>${item.image3 ? `<img src="${src3}" alt="Image 3" width="50" height="50">` : 'No Image'}</td>
                                                <td><button class="btn btn-warning btn-sm updateBtn" data-id="${item.id}" data-name="${item.name}" data-email="${item.email}" data-problem1="${item.problem1}" data-solution1="${item.solution1}"  data-problem2="${item.problem2}" data-solution2="${item.solution2}" data-problem3="${item.problem3}" data-solution3="${item.solution3}">Update</button></td>

                                    </tr>`;
                        $('#problemSolutionTable tbody').append(row);
                    });

                   
                } else {
                    $('#problemSolutionTable tbody').append('<tr><td colspan="14">No data available</td></tr>');
                }
            },
            error: function (error) {
                console.error("Error fetching data: ", error);
            }
        });

        var getallApiUrl = BaseUrl + `api/Jyotish/GetAllAppointment?Id=${jyotishId}`;
        // Load Appointment Data
        function loadAppointmentIds() {
            $.ajax({
                url: getallApiUrl,
                method: 'GET',
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem("Token2")}`,
                    'Content-Type': 'application/json',
                },
                success: function (response) {

                    if (response.status === 200) {
                        if (response.data != null) {
                            $('#appointmentId').empty(); // Clear existing options
                            response.data.forEach(function (appointment) {
                                var appointmentText = appointment.userName + ' (' + new Date(appointment.date).toLocaleDateString('en-IN', { day: '2-digit', month: '2-digit', year: 'numeric' })
                                    + ' at ' + appointment.time + ')';
                                $('#appointmentId').append('<option value="' + appointment.id + '">' + appointmentText + '</option>');
                            });

                        }
                        $('#jyotishId').val(jyotishId);
                    }
                },
                error: function (error) {
                    console.error('Error loading appointments:', error);
                }
            });
        }

        //  email based on selected appointment
        $('#appointmentId').on('change', function () {
            var selectedAppointmentId = $(this).val();
            if (selectedAppointmentId) {
                $.ajax({
                    url: BaseUrl + `api/Jyotish/GetAppointment?Id=${selectedAppointmentId}`,
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${localStorage.getItem("Token2")}`,
                        'Content-Type': 'application/json',
                    },
                    success: function (response) {
                        if (response.status === 200) {




                            $('#email').val(response.data.userEmail);

                        }
                    },
                    error: function (error) {
                        console.error('Error loading email for appointment:', error);
                    }
                });
            }
        });

        // Load appointment IDs when the modal is opened
        $('#appointmentModal').on('show.bs.modal', function () {
            loadAppointmentIds();
        });

        // Add Form Submit
        $('#submitForm').on('click', function () {
            var formData = new FormData();

            // Append each field individually
            formData.append('Email', $('#email').val());
            formData.append('JyotishId', jyotishId);
            formData.append('AppointmentId', $('#appointmentId').val());
            formData.append('Problem1', $('#problem1').val());
            formData.append('Problem2', $('#problem2').val());
            formData.append('Problem3', $('#problem3').val());
            formData.append('Solution1', $('#solution1').val());
            formData.append('Solution2', $('#solution2').val());
            formData.append('Solution3', $('#solution3').val());

            // Append each image file if selected
            if ($('#image1')[0].files.length > 0) {
                formData.append('Image1', $('#image1')[0].files[0]);
            }
            if ($('#image2')[0].files.length > 0) {
                formData.append('Image2', $('#image2')[0].files[0]);
            }
            if ($('#image3')[0].files.length > 0) {
                formData.append('Image3', $('#image3')[0].files[0]);
            }

            $.ajax({
                url: BaseUrl + 'api/Jyotish/AddProblemSolution',
                method: 'POST',
                data: formData,
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem("Token2")}`
                },
                contentType: false, // Important: Do not set Content-Type for FormData
                processData: false, // Important: Prevent jQuery from processing the data
                success: function (response) {
                    if (response.status === 200) {
                        alert('Form submitted successfully!');
                        $('#appointmentModal').modal('hide');
                    } else {
                        alert('Submission failed: ' + response.message || 'Unknown error');
                    }
                },
                error: function (error) {
                    console.error('Error submitting form:', error);
                    alert('Error submitting form: ' + (error.responseJSON ? error.responseJSON.message : 'Unknown error'));
                }
            });
        });


        // Update Form Submit
        $(document).on('click', '.updateBtn', function () {
            const id = $(this).data('id');

            const email = $(this).data('email');
            const problem1 = $(this).data('problem1');
            const solution1 = $(this).data('solution1');
            const problem2 = $(this).data('problem2');
            const solution2 = $(this).data('solution2');
            const problem3 = $(this).data('problem3');
            const solution3 = $(this).data('solution3');
            loadAppointmentIdsUpdate();

            // Set values in the update form
            $('#updateId').val(id);
            $('#updateEmail').val(email);
            $('#updateProblem1').val(problem1);
            $('#updateSolution1').val(solution1);
            $('#updateProblem2').val(problem2);
            $('#updateSolution2').val(solution2);
            $('#updateProblem3').val(problem3);
            $('#updateSolution3').val(solution3);

            // Load Appointment IDs into the select dropdown
          

            // Load the Jyotish ID into the hidden input
            $('#updateJyotishId').val(jyotishId);

            // Show the update modal
            $('#updateModal').modal('show');
        });


        function loadAppointmentIdsUpdate() {
            $.ajax({
                url: getallApiUrl, // Same URL for loading appointments
                method: 'GET',
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem("Token2")}`,
                    'Content-Type': 'application/json',
                },
                success: function (response) {
                    if (response.status === 200) {
                        if (response.data != null) {
                            $('#updateAppointmentId').empty(); // Clear existing options
                            response.data.forEach(function (appointment) {
                                var appointmentText = appointment.userName + ' (' + new Date(appointment.date).toLocaleDateString() + ' at ' + appointment.time + ')';
                                $('#updateAppointmentId').append('<option value="' + appointment.id + '">' + appointmentText + '</option>');
                            });
                        }
                    }
                },
                error: function (error) {
                    console.error('Error loading appointments:', error);
                }
            });
        }

        $('#updateAppointmentId').on('change', function () {
            var selectedAppointmentId = $(this).val();
            if (selectedAppointmentId) {
                $.ajax({
                    url: BaseUrl + `api/Jyotish/GetAppointment?Id=${selectedAppointmentId}`,
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${localStorage.getItem("Token2")}`,
                        'Content-Type': 'application/json',
                    },
                    success: function (response) {
                        if (response.status === 200) {
                            $('#updateEmail').val(response.data.userEmail);
                        }
                    },
                    error: function (error) {
                        console.error('Error loading email for appointment:', error);
                    }
                });
            }
        });



        // Handle form submission for updating
        $('#updateSubmitForm').click(function () {
            var formData = new FormData();

            var Email = $('#updateEmail').val();
            console.log(Email);
            // Append each field individually
            formData.append('Id', $('#updateId').val());
            formData.append('Email', $('#updateEmail').val());
            formData.append('JyotishId', $('#updateJyotishId').val());
            formData.append('AppointmentId', $('#updateAppointmentId').val());
            formData.append('Problem1', $('#updateProblem1').val());
            formData.append('Problem2', $('#updateProblem2').val());
            formData.append('Problem3', $('#updateProblem3').val());
            formData.append('Solution1', $('#updateSolution1').val());
            formData.append('Solution2', $('#updateSolution2').val());
            formData.append('Solution3', $('#updateSolution3').val());

            // Append each image file if selected
            if ($('#image1')[0].files.length > 0) {
                formData.append('Image1', $('#updateImage1')[0].files[0]);
            }
            if ($('#image2')[0].files.length > 0) {
                formData.append('Image2', $('#updateImage2')[0].files[0]);
            }
            if ($('#image3')[0].files.length > 0) {
                formData.append('Image3', $('#updateImage3')[0].files[0]);
            }

            console.log(formData);
            $.ajax({
                url: BaseUrl + `Api/Jyotish/UpdateProblemSolution`, // Replace with your actual update API URL
                type: 'POST',
                data: formData,
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem("Token2")}`,

                },
                contentType: false,
                processData: false,
                success: function (response) {
                    debugger;
                    if (response.status === 200) {

                        $('#updateModal').modal('hide');

                        alert('Update successful!');
                        window.location.reload();
                    }
                    else {
                        alert('Update Failed!');
                    }

                },
                error: function (error) {

                    console.error("Error updating data: ", error);
                    alert('Update failed!');
                }
            });
        });





    });

</script>
