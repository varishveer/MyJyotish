<div class="container-fluid mt-4">
    <div class="card">
        <div class="d-flex flex-row justify-content-between align-items-center pt-2 px-4">
            <h6 class="text-primary">Jyotish Solution</h6>
            <div id="buttonContainer1">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#appointmentModal">
                    Add Solution
                </button>
            </div>
        </div>

        <hr />
        <div class="card-body">
            <div class="table-responsive">
                <table id="problemSolutionTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Problem 1</th>
                            <th>Solution 1</th>
                            <th>Problem 2</th>
                            <th>Solution 2</th>
                            <th>Problem 3</th>
                            <th>Solution 3</th>
                            <th>Image 1</th>
                            <th>Image 2</th>
                            <th>Image 3</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Table content will be inserted here dynamically -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="appointmentModal" tabindex="-1" aria-labelledby="appointmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <!-- Fullscreen class added -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="appointmentModalLabel">Submit Appointment Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="appointmentForm">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" readonly>
                        </div>
                        <div class="form-group col-md-6" hidden>
                            <label for="jyotishId">Jyotish ID</label>
                            <input type="text" class="form-control" id="jyotishId" name="JyotishId">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="appointmentId">Appointment ID</label>
                            <select class="form-control" id="appointmentId" name="AppointmentId"></select>
                        </div>
                       
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="problem1">Problem 1</label>

                            <textarea class="form-control" id="problem1" name="Problem1" rows="2"></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="solution1">Solution 1</label>
                            
                            <textarea class="form-control" id="solution1" name="Solution1" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="problem2">Problem 2</label>
                         
                            <textarea class="form-control" id="problem2" name="Problem2" rows="2"></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="solution2">Solution 2</label>
                         
                            <textarea class="form-control" id="solution2" name="Solution2" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="problem3">Problem 3</label>
                            
                            <textarea class="form-control" id="problem3" name="Problem3" rows="2"></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="solution3">Solution 3</label>
                          
                            <textarea class="form-control" id="solution3" name="Solution3" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="image1">Image 1</label>
                            <input type="file" class="form-control" id="image1" name="Image1">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="image2">Image 2</label>
                            <input type="file" class="form-control" id="image2" name="Image2">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="image3">Image 3</label>
                            <input type="file" class="form-control" id="image3" name="Image3">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="submitForm">Submit</button>
            </div>
        </div>
    </div>
</div>

<!-- Update Modal -->
