                        <div class="form-group col-md-6" hidden>
                            <label for="updateId"> ID</label>
                            <input type="text" class="form-control" id="updateId" name="updateId">
                        </div>
                        <div class="form-group col-md-6" hidden>
                            <label for="updateJyotishId">Jyotish ID</label>
                            <input type="text" class="form-control" id="updateJyotishId" name="updateJyotishId">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="updateAppointmentId">Appointment ID</label>
                            <select class="form-control" id="updateAppointmentId" name="updateAppointmentId"></select>
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="updateProblem1">Problem 1</label>
                            <textarea class="form-control" id="updateProblem1" name="updateProblem1" rows="2"></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="updateSolution1">Solution 1</label>
                            <textarea class="form-control" id="updateSolution1" name="updateSolution1" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="updateProblem2">Problem 2</label>
                            <textarea class="form-control" id="updateProblem2" name="updateProblem2" rows="2"></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="updateSolution2">Solution 2</label>
                            <textarea class="form-control" id="updateSolution2" name="updateSolution2" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="updateProblem3">Problem 3</label>
                            <textarea class="form-control" id="updateProblem3" name="updateProblem3" rows="2"></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="updateSolution3">Solution 3</label>
                            <textarea class="form-control" id="updateSolution3" name="updateSolution3" rows="2"></textarea>
