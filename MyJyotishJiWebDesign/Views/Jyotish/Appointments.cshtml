@{
    Layout = "JyotishLayout";

}

<script>
    Swal.fire({
        title: "Processing Your Request",
        didOpen: () => {
            Swal.showLoading();
        }
    })
 </script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .card-body {
        padding-left: 15px !important;
        padding-right: 15px !important;
    }
</style>

<div class="container-fluid mt-4">
    <div class="card">
        <div class="d-flex flex-row justify-content-between align-items-center pt-2 px-4">
            <h6 class="text-primary">Appointments</h6>
            <div id="buttonContainer1"></div>
        </div>
        <hr />

        <div class="card-body">
            <div class="table-responsive">
                <table id="DataTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Problem</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                            <th>Amount</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Table content will be inserted here dynamically -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel" aria-hidden="true">
       <div class="modal-dialog" role="document">
           <div class="modal-content">
               <div class="modal-header">
                   <h5 class="modal-title" id="updateModalLabel">Client Problem</h5>
                   <button type="button" class="close btn" data-dismiss="modal" aria-label="Close">
                       <span aria-hidden="true">&times;</span>
                   </button>
               </div>
               <div class="modal-body">
                   <form id="requestForm">
                       <input type="hidden" class="form-control" id="SlotId" readonly>
                       <input type="hidden" class="form-control" id="Id" readonly>

                       <div class="form-group mb-2">
                           <label for="Name">Name:</label>
                           <input type="text" class="form-control" id="Name" readonly>
                       </div>
                
                       <div class="form-group mb-2">
                           <label for="Problem">Problem:</label>
                           <input type="text" class="form-control" readonly id="Problem">
                       </div>
                   </form>
               </div>
           </div>
       </div>
   </div>
   
<script>
    $(document).ready(function () {
        
        function fetchData() {
            var Id = localStorage.getItem('Id');
            $.ajax({
                url: BaseUrl + `api/Jyotish/GetAllAppointment?Id=${encodeURIComponent(Id)}`,
                type: 'GET',
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem("Token2")}`,
                    'Content-Type': 'application/json'
                },
                success: function (result) {
                     const today = new Date();
                    let htmls = '';
                    $.each(result.data, function (key, item) {
                        htmls += '<tr>';
                        htmls += `<td class="text-center">${item.id}</td>`;
                        htmls += `<td class="text-center">${item.userName}</td>`;
                      
                        htmls += `<td class="text-center">${item.problem}</td>`;

                        htmls += `<td class="text-center">${new Date(item.date).toLocaleDateString()}</td>`;
                        htmls += `<td class="text-center">${item.time}</td>`;
                     
                        htmls += `<td class="text-center">${item.status}</td>`;
                        htmls += `<td class="text-center">${item.amount || 'N/A'}</td>`;
                        htmls += `<td class="text-center">
                                               <svg data-id="${item.id}" class="edit-appointment" xmlns="http:www.w3.org/2000/svg" width="2em" height="2em" viewBox="0 0 24 24" data-toggle="modal" data-target="#updateModal">
                                                    <path fill="currentColor" d="M13.654 21v-2.21l5.96-5.934l2.19 2.204l-5.94 5.94zm6.885-5.94l-.926-.945zm-6 5.056h.95l3.467-3.474l-.45-.494l-.475-.47l-3.493 3.488zM5 21V3h9.5L19 7.5v2.596h-1V8h-4V4H6v16h5.27v1zm13.506-4.852l-.475-.47l.925.964z"/>
                                                </svg>

                                               `;
                         if (item.date <= today) {
                            htmls += ` <a href="/Jyotish/JyotishSolution?id=${item.id}"><i class="fa-solid fa-people-arrows"></i></a>`;
                        }

                    htmls += '</td></tr>';
                    });
                    $('#DataTable tbody').html(htmls);
                    $('#DataTable').DataTable();
                    Swal.close();
                },
                error: function (errormessage) {
                    Swal.close();
                    console.error('Error fetching data:', errormessage.responseText);
                }
            });
        }

        // Fetch and populate modal form with appointment data
        $(document).on('click', '.edit-appointment', function () {
            Swal.fire({
                title: "Processing Your Request",
                didOpen: () => {
                    Swal.showLoading();
                }
            })
            const appointmentId = $(this).attr('data-id');
            $.ajax({
                url: BaseUrl + `api/Jyotish/GetAppointment?Id=${appointmentId}`,
                type: 'GET',
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem("Token2")}`,
                    'Content-Type': 'application/json'
                },
                success: function (result) {
                    const appointment = result.data;

                    // Populate modal fields with fetched data
                    $('#Id').val(appointment.id);
                    $('#SlotId').val(appointment.id);
                   
                    $('#Name').val(appointment.userName);
                  
                    $('#Problem').val(appointment.problem);
                  
                   
                    Swal.close();
                },
                error: function (errormessage) {
                    Swal.close();
                    console.error('Error loading appointment details:', errormessage.responseText);
                }
            });
        });

        $('#updateButton').on('click', async function () {
            Swal.fire({
                title: "Processing Your Request",
                didOpen: () => {
                    Swal.showLoading();
                }
            })
            const formData = {
                id: parseInt($('#Id').val(), 10),
              
                email: $('#Email').val(),
              
                jyotishId:localStorage.getItem('Id'),
                slotId: parseInt($('#SlotId').val(), 10),
              
                problem: $('#Problem').val(),
              
            };

            console.log('Form Data:', formData); // Check the form data

            try {
                const response = await fetch(BaseUrl + 'api/Jyotish/UpdateAppointment', {
                    method: 'POST', // Change this to 'PUT' if your API expects a PUT request for updates
                    headers: {
                        'Authorization': `Bearer ${localStorage.getItem("Token2")}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData) // Stringify the formData object
                });

                if (response.ok) {
                    Swal.fire({
                        title: "Successful!",
                        text: "Appointment updated successfully!",
                        icon: "success",

                        showConfirmButton: true,
                    }).then(() => {


                        location.reload();

                    });
                  
                    
                } else {
                    const error = await response.json();
                    Swal.fire({
                        title: "Warning!",
                        text: "Please enter correct data",
                        icon: "warning",

                        showConfirmButton: true,
                    });
                    
                }
            } catch (error) {
                Swal.close();
                console.error('Error updating appointment:', error);
            }
        });

        fetchData(); 
    });
</script>
