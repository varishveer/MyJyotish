
@{
    Layout = "JyotishLayout";
   
}

<style>
    .card-body {
        padding-left: 15px !important;
        padding-right: 15px !important;
    }

    label {
        display: none;
    }
</style>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<link href="https://cdn.datatables.net/2.1.3/css/dataTables.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/2.1.3/js/dataTables.min.js"></script>

<div class="container-fluid mt-4">
    <div class="card">
        <div class="d-flex flex-row justify-content-between align-items-center pt-2 px-4">
            <h5 class="text-primary">Team Member</h5>
        </div>
        <hr />

        <div class="card-body">
            <div class="table-responsive">
                <table id="teamMemberTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Mobile</th>
                            <th scope="col">Email</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be dynamically inserted here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var Id = localStorage.getItem('Id');
        $('#teamMemberTable').DataTable({
            ajax: {
                url: BaseUrl + `api/Jyotish/TeamMember?Id=${encodeURIComponent(Id)}`,
                type: 'GET',
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem("Token2")}`,
                    'Content-Type': 'application/json',
                },
                dataSrc: function (json) {
                    return json.data; // Return the JSON array directly
                }
            },
            columns: [
                { data: 'id' },
                { data: 'name' },
                { data: 'mobile' },
                { data: 'email' },
               
            ]
        });

        // Handle click event for the View button
       
    });
</script>
