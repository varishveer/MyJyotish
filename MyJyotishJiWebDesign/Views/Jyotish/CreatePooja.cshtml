@{
    Layout = "JyotishLayout";
}

<form class="p-3 border mx-auto rounded shadow">
    <h3 class="text-primary my-3">Create Pooja</h3>
    <div class="row">

        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-4">
                    Thumbnail
                    <input type="file" class="form-control" name="image"/>
                </div>
                <div class="col-sm-4">
                    Pooja Type
                    <select class="form-select" required name="poojaId"> 
                        <option selected disabled>--Select Pooja Type--</option>
                    </select>
                </div>
                <div class="col-sm-4">
                    Title
                    <input type="text" class="form-control" placeholder="Enter Title " name="title" />
                </div>
            </div>
            <div class="col-sm-12 my-2">
                Proccedure
                <textarea class="summernote" rows="2" name="proccedure"></textarea>
            </div>
            <div class="col-sm-12 my-2">
                Benefits
                <textarea class="summernote" rows="2" name="benefits"></textarea>
            </div>
            <div class="col-sm-12 my-2">
                About Gods
                <textarea class="summernote" rows="2" name="aboutGod"></textarea>
            </div>
            <div class="col-sm-12 text-center">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    </div>

</form>
